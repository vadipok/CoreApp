@using kern.Models.MVC
@using kern.Models.DataBase
@model FieldMVC

<div id="getUserListResult">
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col"></th>
                <th scope="col">Заблокировать</th>
                <th scope="col">Месторождение</th>
                <th scope="col">Залежь</th>
                <th scope="col">Год открытия</th>
                <th scope="col">Год начала разработки</th>
            </tr>
        </thead>
        <tbody>
            @foreach (BaseField f in Model.GetListFields())
            {
            <tr>
                <th scope="row">
                    <a class="btn btn-success modItem" asp-area="" asp-controller="DataBank" asp-action="EditField" asp-route-domainLogin="@f.Id">
                        <i class="fas fa-edit"></i>
                    </a>
                </th>
                <td>
                    <label class="switch"> <input type="checkbox" class="user-role-check" id="@f.isValid" checked /> <span class="slider round"></span></label>
                </td>
                <td>@f.NameField</td>
                <td>@f.Deposit</td>
                <td>@f.YearOpening</td>
                <td>@f.YearStartDevelopment</td>
            </tr>
            }
        </tbody>
    </table>
</div>

