@using kern.Models.Authentication
@using kern.Models.DataBase
@model Security

<div id="getUserListResult">
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col">Права доступа</th>
                <th scope="col">Заблокировать</th>
                <th scope="col">Логин</th>
                <th scope="col">ФИО</th>
                <th scope="col">Почтовый адрес</th>
                <th scope="col">Дата регистрации</th>
            </tr>
        </thead>
        <tbody>
            @foreach (AccauntUser u in Model.GetListUsers())
            {
            <tr>
                <th scope="row">
                    <a class="btn btn-success modItem" asp-area="" asp-controller="Account" asp-action="EditUser" asp-route-domainLogin="@u.Login">
                        <i class="fas fa-edit"></i>
                    </a>
                </th>
                <td>
                    <label class="switch"> <input type="checkbox" class="user-role-check" id="@u.Login" checked /> <span class="slider round"></span></label>
                </td>
                <td>@u.Login</td>
                <td>@u.UserName</td>
                <td>@u.Email</td>
                <td>@u.CreateDate</td>
            </tr>
            }
        </tbody>
    </table>
</div>

