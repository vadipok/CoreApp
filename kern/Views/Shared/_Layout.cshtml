        <!--<script src="~/lib/bootstrap4-toggle-3.4.0/js/bootstrap4-toggle.min.js" asp-append-version="true"></script>-->
        <script src="~/lib/alertifyjs/alertify.min.js"></script>
    </environment>

    


    @RenderSection("Scripts", required: false)
</body>
</html>
